<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.Light" praent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="appTitlefont" parent="@android:style/TextAppearance">
        <item name="android:paddingTop">@dimen/appBorderPadding</item>
        <item name="android:paddingLeft">@dimen/appBorderPadding</item>
        <item name="android:paddingBottom">@dimen/textPadding</item>
        <item name="android:background">@color/white_app_primary</item>
        <item name="android:textColor">@color/white_app_txt_white</item>
        <item name="android:textSize">@dimen/textSizeBiggest</item>
    </style>

    <style name="appTitleTimefont" parent="@android:style/TextAppearance">
        <item name="android:paddingTop">@dimen/appBorderPadding</item>
        <item name="android:paddingRight">@dimen/appBorderPadding</item>
        <item name="android:paddingBottom">@dimen/textPadding</item>
        <item name="android:textColor">@color/white_app_txt_white</item>
        <item name="android:textSize">@dimen/textSizeBiggest</item>
    </style>

    <style name="appTitlefontDes">
        <item name="android:background">@color/white_app_bg_primary</item>
        <item name="android:paddingTop">@dimen/textPadding</item>
        <item name="android:paddingLeft">@dimen/appBorderPadding</item>
        <item name="android:paddingRight">@dimen/textPadding</item>
        <item name="android:textColor">@color/white_app_txt_white</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="appSettingTitlefontDes">
        <item name="android:background">@color/white_app_bg_primary</item>
        <item name="android:paddingTop">@dimen/textPadding</item>
        <item name="android:paddingLeft">@dimen/appBorderPadding</item>
        <item name="android:paddingRight">@dimen/appBorderPadding</item>
        <item name="android:paddingBottom">@dimen/textPadding</item>
        <item name="android:textColor">@color/white_app_txt_gray_light_light</item>
    </style>

    <style name="appTitlefontSpace">
        <item name="android:background">@color/white_app_bg_primary</item>
    </style>

    <style name="appTitleMotto">
        <item name="android:background">@color/white_app_bg_primary</item>
        <item name="android:paddingLeft">@dimen/appBorderPadding</item>
        <item name="android:paddingRight">@dimen/textPadding</item>
        <item name="android:paddingBottom">@dimen/textPadding</item>
    </style>

    <style name="appTitlefontMotto">
        <item name="android:textColor">@color/white_app_txt_white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="appTitlefontMottoQuotes" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white_app_txt_gray_light_light</item>
        <item name="android:textSize">@dimen/textSizebig</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="appReviewLayout">
        <item name="android:background">@color/white_app_bg_white</item>
        <item name="android:padding">@dimen/textPadding</item>
    </style>

    <style name="appMessageLayout">
        <item name="android:background">@color/white_app_bg_secondary</item>
        <item name="android:paddingTop">@dimen/textMinPadding</item>
        <item name="android:paddingLeft">@dimen/appBorderPadding</item>
        <item name="android:paddingRight">@dimen/appBorderPadding</item>
        <item name="android:paddingBottom">@dimen/textMinPadding</item>
        <item name="android:textColor">@color/white_app_txt_white</item>
    </style>

    <style name="appTodayLayout">
        <item name="android:background">@color/white_app_bg_secondary</item>
    </style>

    <style name="appBottomLayout">
        <item name="android:background">@color/white_app_bg_secondary</item>
        <item name="android:paddingTop">@dimen/textMinPadding</item>
        <item name="android:paddingLeft">@dimen/appBorderPadding</item>
        <item name="android:paddingRight">@dimen/appBorderPadding</item>
        <item name="android:paddingBottom">@dimen/textMinPadding</item>
    </style>

    <style name="appBottomToolBarTextLayout">
        <item name="android:textColor">@color/white_app_txt_white</item>
        <item name="android:paddingLeft">@dimen/textPadding</item>
        <item name="android:paddingRight">@dimen/textPadding</item>
    </style>

    <style name="appTotayPopupTitle">
        <item name="android:paddingLeft">@dimen/textPadding</item>
        <item name="android:paddingRight">@dimen/textPadding</item>
        <item name="android:paddingTop">@dimen/appBorderPadding</item>
        <item name="android:paddingBottom">@dimen/appBorderPadding</item>
        <item name="android:textSize">@dimen/textSizebig</item>
        <item name="android:textColor">@color/white_app_txt_white</item>
        <item name="android:background">@drawable/setting_roundrect_popup_top</item>
    </style>

    <style name="appTotayPopupTitleWarning">
        <item name="android:paddingLeft">@dimen/textPadding</item>
        <item name="android:paddingRight">@dimen/textPadding</item>
        <item name="android:paddingTop">@dimen/appBorderPadding</item>
        <item name="android:paddingBottom">@dimen/appBorderPadding</item>
        <item name="android:textSize">@dimen/textSizebig</item>
        <item name="android:textColor">@color/white_app_txt_white</item>
        <item name="android:background">@drawable/setting_roundrect_popup_top_warning</item>
    </style>

    <style name="appPopupTitle">
        <item name="android:paddingBottom">@dimen/appBorderPadding</item>
        <item name="android:textSize">@dimen/textSizebig</item>
        <item name="android:textColor">@color/white_app_txt_white</item>
        <item name="android:background">@color/white_app_primary</item>
    </style>

    <style name="appTotayPopupContent">
        <item name="android:background">@color/white_app_bg_secondary</item>
        <item name="android:padding">@dimen/appBorderPadding</item>
    </style>

    <style name="DialogAnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="appReportTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white_app_txt_reportTitle</item>
    </style>

    <style name="appReportBottom">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="appReportBottomNumber" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">#41bb45</item>
        <item name="android:textSize">@dimen/textSizebig</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

</resources>