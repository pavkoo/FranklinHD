<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/appBorderPadding"
    android:background="@drawable/popup_background"
    android:orientation="vertical" >

    <TextView
        style="@style/appTotayPopupTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/welcome" />

    <EditText
        android:id="@+id/txtSettingWelcomePopupContext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/appBorderPadding"
        android:layout_marginRight="@dimen/appBorderPadding"
        android:layout_marginTop="@dimen/appBorderPadding"
        android:inputType="textMultiLine"
        android:gravity="left|top"
        android:minLines="4" />

    <com.pavkoo.franklin.controls.AnimMessage
        android:id="@+id/amSettingWelcomePupMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/appBorderPadding"
        android:layout_marginLeft="@dimen/appBorderPadding"
        android:layout_marginRight="@dimen/appBorderPadding" >

        <TextView
            android:id="@+id/tvSettingWelcomePopupCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textPadding"
            android:layout_marginTop="@dimen/textPadding"
            android:layout_marginRight="@dimen/textPadding"
            android:layout_weight="1"
            android:background="@drawable/setting_roundrect_selector"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/textPadding"
            android:text="@string/cancel"
            android:textColor="@color/white_app_txt_white" />

        <TextView
            android:id="@+id/tvSettingWelcomePopupYes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/textPadding"
            android:layout_marginTop="@dimen/textPadding"
            android:layout_marginLeft="@dimen/textPadding"
            android:layout_weight="1"
            android:background="@drawable/setting_roundrect_warning_selector"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/textPadding"
            android:text="@string/OK"
            android:textColor="@color/white_app_txt_white" />
    </LinearLayout>

</LinearLayout>