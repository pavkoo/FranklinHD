<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvReportTrendTitle"
        style="@style/appTotayPopupTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/trend" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/appBorderPadding"
        android:paddingRight="@dimen/appBorderPadding"
        android:paddingTop="@dimen/appBorderPadding" >

        <ListView
            android:id="@+id/lvTrend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutAnimation="@anim/main_content_item"
            android:listSelector="@android:color/transparent" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/appBorderPadding" >

        <TextView
            android:id="@+id/tvReportTrendClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_roundrect_warning_selector"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/textPadding"
            android:text="@string/close"
            android:textColor="@color/white_app_txt_white" />
    </LinearLayout>

</LinearLayout>