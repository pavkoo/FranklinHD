<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_app_sea"
    android:gravity="top"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_app_sea" >

        <ImageView
            android:id="@+id/ivCloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginTop="@dimen/textSizeBiggest"
            android:contentDescription="@string/devTemp"
            android:src="@drawable/cloud" />

        <ImageView
            android:id="@+id/ivSplash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:contentDescription="@string/devTemp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/ivCloud2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginTop="@dimen/textSizebig"
            android:contentDescription="@string/devTemp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/cloud" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_app_bg_secondary" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/devTemp"
                android:layout_marginBottom="@dimen/textPadding"
                android:background="@drawable/texttop" />

            <TextView
                android:id="@+id/tvSplash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:textColor="@color/white_app_txt_black" />
            
             <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/devTemp"
                android:background="@drawable/textbottom" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>